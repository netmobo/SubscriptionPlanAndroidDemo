<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/QSO.FP.Layout"
    >
    <LinearLayout 
            style="@style/QSO.FP.Layout"
            android:orientation="vertical"
        >
        <TextView 
                android:textSize="12sp"
                style="@style/QSO.FW.SubTitleLabel_TextView" 
                android:text="Sign-up and enjoy great videos and drama series." 
            />
        <View 
                android:layout_height="20dip" 
                android:layout_width="wrap_content"
            />
        <TextView 
                android:text="Username" 
                android:textSize="18dip" 
                style="@style/QSO.FW" 
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip" 
            />
        <EditText 
                android:id="@+id/username" 
                style="@style/QSO.FW.PropertyInput_EditText" 
            />
        <TextView 
                android:text="Password" 
                android:textSize="18dip" 
                style="@style/QSO.FW" 
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip" 
            />
        <EditText 
                android:id="@+id/password" 
                android:password="true"
                style="@style/QSO.FW.PropertyInput_EditText" 
            />
        <TextView 
                android:text="Email" 
                android:textSize="18dip" 
                style="@style/QSO.FW" 
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip" 
            />
        <EditText 
                android:id="@+id/email" 
                style="@style/QSO.FW.PropertyInput_EditText" 
            />
        <View 
                android:layout_height="10dip" 
                android:layout_width="wrap_content"
            />
        <TextView 
                style="@style/QSO.FW" 
                android:textSize="14dip" 
                android:layout_marginLeft="5dip"
                android:text="For password recovery, please enter a question and answer that you can easily remember to help us verify your identity." 
            />
        <View 
                android:layout_height="10dip" 
                android:layout_width="wrap_content"
            />
        <TextView 
                android:text="Question" 
                android:textSize="18dip"
                style="@style/QSO.FW" 
                android:layout_marginLeft="5dip"
            />
        <EditText 
                android:id="@+id/security_question" 
                style="@style/QSO.FW.PropertyInput_EditText" 
            />
        <TextView 
                android:text="Answer" 
                android:textSize="18dip"
                style="@style/QSO.FW" 
                android:layout_marginLeft="5dip"
            />
        <EditText 
                android:id="@+id/security_answer" 
                style="@style/QSO.FW.PropertyInput_EditText" 
            />
        <LinearLayout 
                style="@style/QSO.FW.Layout"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
            >
            <Button 
                    android:text="Register Me" 
                    android:id="@+id/signup_register_button"
                    style="@style/QSO.WC.Action_Button"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>