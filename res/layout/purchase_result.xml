<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/QSO.FP.Layout"
        android:fillViewport="true"
    >
    <RelativeLayout 
            style="@style/QSO.FP.Layout"
        >
        <LinearLayout
	            android:id="@+id/purchase_success"
                style="@style/QSO.FW.Layout"
                android:orientation="vertical"
            >
	        <TextView 
	                android:textSize="20sp" 
	                android:text="You are now watching..." 
	                style="@style/QSO.FW"
	            />
	        <View
	                android:layout_height="10px" 
	                android:layout_width="fill_parent" 
	            />
	        <TextView 
	                android:id="@+id/purchase_title"
	                android:textSize="30sp" 
	                android:gravity="center"
	                style="@style/QSO.FW"
	            />
	        <View
	                android:layout_height="10px" 
	                android:layout_width="fill_parent" 
	            />
	        <TextView 
	                android:textSize="20sp" 
	                android:text="(This is just a demo. Use your imagination.)" 
	                android:gravity="center"
	                android:textColor="#FFFF1122"
	                style="@style/QSO.FW"
	            />
        </LinearLayout>
        <TextView 
                android:id="@+id/purchase_errorMessage"
                android:textSize="20sp" 
                android:text="Unable to perform transaction. Please try again later." 
                android:gravity="center"
                style="@style/QSO.FW"
                android:visibility="gone"
            />
    </RelativeLayout>
</ScrollView>
